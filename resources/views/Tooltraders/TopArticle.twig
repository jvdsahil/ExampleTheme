<div class="m-b-2">
    <div class="section-header m-b-1">
        <h2><i class="fa fa-tags"></i> Top-Artikel</h2></div>

    <div class="col-xs-12 ">
        {% if currentItems is not null %}
        <div id="twig-rendered-item-list" class="item-list-frame blur-effect">
            <ul class="product-list row grid">

                {% for item in currentItems %}
                    {% set url = "/" ~ item.itemTexts.0.urlPath ~ "_" ~ item.item.id ~ "_" ~ item.id %}
                    {% set imagePath = item.images.0.documentUploadPath %}

                    {% if imagePath is not null %}

                        <li class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                            <article class="cmp cmp-product-thumb cmp-product-thumb--grid">
                                <div class="thumb-inner">
                                    <div>
                                        <div data-toggle="tooltip" data-placement="top" title="" class="add-to-basket-lg-container hidden-md-down" data-original-title="Artikel anzeigen"><i class="fa fa-arrow-right fa-lg mobile-icon-right"></i></div>

                                    </div>
                                    <div class="thumb-background"></div>
                                    <div class="thumb-image">
                                        <div class="square-container">
                                            <div class="square-inner main-image">
                                                <a href="{{ url }}"><img data-original="{{ imagePath }}" class="img-fluid lazy" alt="{{ image.cleanImageName }}" src="{{ imagePath }}" style="display: inline;"></a>
                                                <noscript>
                                                    <a href="{{ url }}"><img src="{{ imagePath }}" class="img-fluid"></a>
                                                </noscript>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="special-tags"><span class="tag bg-success">
                                                Top-Artikel
                                            </span></div>
                                    <div class="thumb-content"><a href="{{ url }}" class="thumb-title small">
                                            {{ item.itemTexts.0.name }}
                                        </a>
                                        <div class="thumb-meta">
                                            <div class="prices">
                                                <div class="price">
                                                    {{ item.variationSalesPrices.0.price }}&nbsp;EUR *
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="category-list-view-port">
                                                <div role="group" aria-label="Thumb Control" class="btn-group">
                                                    <button type="button" class="btn btn-outline-primary mobile-width-button"><i aria-hidden="true" class="fa fa-arrow-right fa-lg mobile-icon-right"></i> <span class="mobile-text-only">Artikel anzeigen</span></button>
                                                </div>
                                            </div>
                                        </div> <span class="vat-porto-info small text-muted">
                                            * inkl. ges. MwSt. zzgl.
                                            <a title="Versandkosten">Versandkosten</a></span></div>
                                </div>
                            </article>
                        </li>
                    {% endif %}

                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</div>
